<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateBlogFragment"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Create Blog" />

    </LinearLayout>

    <EditText
        android:id="@+id/blogtitle"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Blog Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/blogcontent"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:hint="Content Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/blogauthor"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogcontent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="310dp"
        android:ems="10"
        android:hint="Author Name"
        android:inputType="text" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:text="Create" />


</FrameLayout>